<div class="card-deck mx-auto" id="columns">
  <% doings.each do |doing| %>
    <div class="p-0 col-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 justify-content-center" id="doing-<%= doing.id %>-<%= doing.title %>">
      <div class="pr-3 pb-3">
        <%= render 'doings/doing_card', doing: doing %>
      </div>
    </div>
  <% end %>
</div>