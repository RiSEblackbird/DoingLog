<%= form_for @doing do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary, autofocus: true, autocomplete: "summary" %>
  </div>
  <div class="actions">
    <%= f.submit "投稿する" %>
  </div>
<% end %>